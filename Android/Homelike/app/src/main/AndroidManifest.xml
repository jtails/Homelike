<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.jtails.homelike" >

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- C2D -->
    <permission
        android:name="mx.jtails.homelike.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="mx.jtails.homelike.permission.C2D_MESSAGE" />

    <application
        android:name=".HomelikeApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Homelike" >
        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SplashActivity"
            android:icon="@drawable/ic_ab_navigation"
            android:theme="@style/Theme.Homelike.Splash" />
        <activity
            android:name=".ui.MyAddressesActivity"
            android:icon="@drawable/ic_ab_navigation"/>
        <activity
            android:name=".ui.CheckOrderActivity"
            android:icon="@drawable/ic_ab_navigation" />
        <activity
            android:name=".ui.AddressActivity"
            android:icon="@drawable/ic_ab_navigation" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyBfak2APw1ztdvQFeg3tNbLfXSkVYmeO1U" />

        <service android:name=".OrderStatusService"/>
        <receiver android:name=".OrderStatusReciever"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <category android:name="mx.jtails.homelike"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
