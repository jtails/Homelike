<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:homelike="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <mx.jtails.homelike.ui.widget.TypeFacedTextView
        android:id="@+id/lbl_product_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        homelike:typeface="fonts/Roboto-Medium.ttf"
        android:textSize="18sp"/>

    <FrameLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="#666"/>

    <mx.jtails.homelike.ui.widget.TypeFacedTextView
        android:id="@+id/lbl_quantity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        homelike:typeface="fonts/Roboto-Light.ttf"
        android:textSize="21sp"
        android:layout_margin="5dp"/>

</LinearLayout>